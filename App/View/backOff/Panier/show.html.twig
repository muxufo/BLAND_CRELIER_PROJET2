{% extends "layout.twig" %}
{% block contenu %}
    <div class="row">
        <table>
            <caption>Panier</caption>
            <thead>
            <tr>
                <th>id_produit</th>
                <th>quantite</th>
                <th>prix</th>
                <th>dateAjoutPanier</th>
            </tr>
            </thead>
            <tbody>
            {% for Panier in data if data is not empty %}
                <tr>
                    <td>{{Panier.id_produit}}</td>
                    <td>{{Panier.quantite}}</td>
                    <td>{{Panier.prix}}</td>
                    <td>{{Panier.dateAjoutPanier}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}