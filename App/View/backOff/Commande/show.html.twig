{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="row">
        {% if   app.session.get('droit') is defined and  app.session.get('droit') == 'DROITclient' %}
            <table>
                <caption>Recapitulatifs des commandes (avec twig)</caption>
                <thead>
                <tr >
                    <th>id</th>
                    <th>id_user</th>
                    <th>prix</th>
                    <th>date_achat</th>
                    <th>id_etat</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for commande in data if data is not empty %}
                    <tr>
                        <td>{{commande.id}}</td>
                        <td>{{commande.user_id}}</td>
                        <td>{{commande.prix}}</td>
                        <td>{{commande.date_achat}}</td>
                        <td>{{commande.libelle}}</td>

                    </tr>
                {% endfor %}
                <tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}

